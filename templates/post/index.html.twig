{% extends "layout.html.twig" %}

{% block content %}
<div class="container"> 
<form id="new-post">
	<div class="col-md-5" >
		<div class="form-group">
	  		<label for="username" class="col-form-label">Gebruikersnaam</label>
	  		<input class="form-control" type="text" name="name">
		</div>
		<div class="form-group">
	  		<label for="password" class="col-form-label">Wachtwoord</label>
    		<input class="form-control" type="password" name="password">
		</div>
	</div>
	<div class="col-md-7" >
		<div class="form-group">
	  		<label for="title" class="col-form-label">Titel</label>
    		<input class="form-control" type="text" name="title">
		</div>
		<div class="form-group">
    		<label for="message">Bericht</label>
    		<textarea class="form-control" name="message" rows="3"></textarea>
  		</div>
  	</div><button type="submit" class="btn btn-primary float-right">Submit</button>
  	</form>
  	<br />
  		{% include 'post/_posts_table.html.twig' %}
	</div>
{% endblock %}